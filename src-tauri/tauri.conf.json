{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Magnus",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "dmg"],
      "identifier": "com.magnus.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/magnus.icns",
        "icons/magnus.ico",
        "icons/magnus.png",
        "icons/Square30x30Logo.png",
        "icons/Square44x44Logo.png",
        "icons/Square71x71Logo.png",
        "icons/Square89x89Logo.png",
        "icons/Square107x107Logo.png",
        "icons/Square142x142Logo.png",
        "icons/Square150x150Logo.png",
        "icons/Square284x284Logo.png",
        "icons/Square310x310Logo.png",
        "icons/StoreLogo.png"
      ],
      "resources": [
        "./libgcc_s_seh-1.dll",
        "./libstdc++-6.dll",
        "./libvosk.dll",
        "./libvosk.dylib",
        "./libvosk.lib",
        "./libwinpthread-1.dll",
        "./models/vosk-model-small-en-us-0.15/"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Magnus",
        "width": 1200,
        "height": 800
      }
    ]
  }
}