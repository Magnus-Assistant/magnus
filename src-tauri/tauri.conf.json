{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "magnus",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.magnus.dev",
      "icon": ["./icons/icon.png", "./icons/icon.ico"],
      "externalBin": [
        "./externalBins/libvosk.dylib",
        "./externalBins/models-aarch64-apple-darwin/vosk-model-small-en-us-0.15",
        "./externalBins/libgcc_s_seh-1.dll",
        "./externalBins/libstdc++-6.dll",
        "./externalBins/libvosk.dll",
        "./externalBins/libvosk.lib",
        "./externalBins/libwinpthread-1.dll"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Magnus",
        "width": 800,
        "height": 600
      }
    ]
  }
}
