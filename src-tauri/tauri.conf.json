{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:8000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "magnus",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          { "name": "./libgcc_s_seh-1.dll", "sidecar": true },
          { "name": "./libstdc++-6.dll", "sidecar": true },
          { "name": "./libvosk.dll", "sidecar": true },
          { "name": "./libvosk.dylib", "sidecar": true },
          { "name": "./libvosk.lib", "sidecar": true },
          { "name": "./libwinpthread-1.dll", "sidecar": true }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.magnus.dev",
      "resources": [
        "./libgcc_s_seh-1.dll",
        "./libstdc++-6.dll",
        "./libvosk.dll",
        "./libvosk.dylib",
        "./libvosk.lib", 
        "./libwinpthread-1.dll"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Magnus",
        "width": 800,
        "height": 600
      }
    ]
  }
}
